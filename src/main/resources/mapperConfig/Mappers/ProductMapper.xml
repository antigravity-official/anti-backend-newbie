<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="antigravity.repository.ProductRepository">

    <select id="findById" resultType="antigravity.entity.Product" parameterType="Long">
        select * from product
        where id = #{productId}
    </select>
</mapper>